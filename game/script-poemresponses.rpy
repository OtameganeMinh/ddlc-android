label poemresponse_start:
    $ poemsread = 0
    $ skip_transition = False
    label poemresponse_loop:
        $ skip_poem = False
        if renpy.music.get_playing() and not (renpy.music.get_playing() == audio.t5 or renpy.music.get_playing() == audio.t5c):
            $ renpy.music.play(audio.t5, fadeout=1.0, if_changed=True)
        if skip_transition:
            scene bg club_day
        else:
            scene bg club_day
            with wipeleft_scene
        $ skip_transition = False
        if not renpy.music.get_playing():
            play music t5
    label poemresponse_start2:
        $ skip_poem = False
        if persistent.playthrough == 2:
            $ pt = "2"
        else:
            $ pt = ""
        if poemsread == 0:
            $ menutext = "Nên đưa thơ của mình cho ai đọc đầu tiên nhỉ?"
        else:
            $ menutext = "Tiếp theo đưa cho ai đọc đây nhỉ?"

        menu:
            "[menutext]"

            "Sayori" if not s_readpoem and persistent.playthrough == 0:
                $ s_readpoem = True
                if chapter == 1 and poemsread == 0:
                    "Đưa cho Sayori đọc là ổn nhất."
                    "Chỗ bạn bè thân thiết nó thoải mái hơn."
                call poemresponse_sayori from _call_poemresponse_sayori
            "Natsuki" if not n_readpoem:
                $ n_readpoem = True
                if chapter == 1 and poemsread == 0:
                    "Hôm qua tôi đã bảo với Natsuki là mình thích thơ của cậu ta."
                    "Nên giờ cũng phải chia sẻ lại bài mình viết chứ."
                call poemresponse_natsuki from _call_poemresponse_natsuki
            "Yuri" if not y_readpoem and not y_ranaway:
                $ y_readpoem = True
                if chapter == 1 and poemsread == 0:
                    "Có vẻ Yuri là người có kinh nghiệm nhất trong vụ viết thơ."
                    "Chắc chắn cậu ấy sẽ có những lời đánh giá hay."
                call poemresponse_yuri from _call_poemresponse_yuri
            "Monika" if not m_readpoem:
                $ m_readpoem = True
                if chapter == 1 and poemsread == 0:
                    "Nên cho Monika xem trước thì hơn."
                    "Hôm qua cậu ấy tỏ ý muốn xem mình viết thế nào. Phải chứng tỏ cho chủ nhiệm thấy mình có hứng thú với văn học chứ."
                call poemresponse_monika from _call_poemresponse_monika
        $ poemsread += 1
        if poemsread < 3 or (persistent.playthrough == 0 and poemsread < 4):
            jump poemresponse_loop


    $ s_readpoem = False
    $ n_readpoem = False
    $ y_readpoem = False
    $ m_readpoem = False
    $ poemsread = 0
    return

